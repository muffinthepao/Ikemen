<%- include('../partials/header'); %>

<nav aria-label="Page navigation example">
  <ul class="flex flex-wrap justify-center mt-5">
    <% if (page > 1) { %>
      <li>
        <a href="/food?page=<%= page - 1 %>" class="py-2 px-3 ml-0 leading-tight text-gray-500 bg-white rounded-l-lg border border-gray-300 hover:bg-gray-100 hover:text-gray-700">Previous</a>
      </li>
    <% } %> 

    <% pageArray.forEach(p => { %>
      <% if (page === p) { %>
        <li>
          <a href="/food?page=<%= p %>" aria-current="page" class="py-2 px-3 text-red-600 bg-red-50 border border-gray-300 hover:bg-red-100 hover:text-blue-700"><%= p %></a>
        </li>
      <% } else { %>
        <li>
          <a href="/food?page=<%= p %>" class="py-2 px-3 leading-tight text-gray-500 bg-white border border-gray-300 hover:bg-gray-100 hover:text-gray-700"><%= p %></a>
        </li>
      <% } %>
    <% }) %> 

    <% if (page < 50) { %>
      <li>
        <a href="/food?page=<%= page + 1 %>" class="py-2 px-3 leading-tight text-gray-500 bg-white rounded-r-lg border border-gray-300 hover:bg-gray-100 hover:text-gray-700">Next</a>
      </li>
    <% }%> 
  </ul>
</nav>

<div class="flex flex-wrap justify-center mt-5">
<% foodListings.forEach(l => { %>
  <% const yelpStarPercentage = `${(l.rating/ 5) * 100}%`; %> 
  <div id="food-image" class="mx-3 my-3 max-w-sm bg-white rounded-lg border border-gray-200 shadow-md">
    <a href="/food/<%= l.id %>">
        <img class="rounded-t-lg" src="<%= l.image_url %>" alt="" style ="height: 280px" object-fit: cover/>
    </a>
    <div class="p-5">
        <a href="/food/<%= l.id %> ">
            <h5 class="mb-2 text-xl font-bold tracking-tight text-gray-900"><%= l.name  %></h5>
        </a>

        <div class="flex items-center mt-2.5 mb-5">
          <div class="stars-outer">
            <div class="stars-inner" style="width:"></div>
          </div>
          <span class="bg-red-100 text-red-800 text-xs font-semibold mr-2 px-2.5 py-0.5 rounded ml-3">IKEMEN</span>
        </div>

      <div class="flex items-center mt-2.5 mb-5">
        <div class="stars-outer">
          <div class="stars-inner" style="width:<%= yelpStarPercentage %>"></div>
        </div>
        <span class="bg-red-100 text-red-800 text-xs font-semibold mr-2 px-2.5 py-0.5 rounded ml-3">YELP</span>
      </div>

        <a href="/food/<%= l.id %>" class="inline-flex items-center py-2 px-3 text-sm font-medium text-center text-white bg-red-500 rounded-lg hover:bg-red-700 focus:ring-4 focus:outline-none focus:ring-blue-300">
            Read more
            <svg aria-hidden="true" class="ml-2 -mr-1 w-4 h-4" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
        </a>
    </div>
  </div>
  <% }) %>
</div>



<%- include('../partials/footer'); %>